---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
---

<Layout title="Consultoría Académica | Servicios">
  <Header />
  <main class="bg-slate-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-3xl font-extrabold text-slate-900 sm:text-4xl">Servicios Profesionales</h1>
        <p class="mt-4 max-w-2xl mx-auto text-xl text-slate-500">
          Acompañamiento personalizado para cada etapa de tu formación.
        </p>
      </div>

      <div class="mt-16 space-y-12">
        {services.map((service, index) => (
          <div class={`flex flex-col md:flex-row gap-8 items-center ${index % 2 === 1 ? 'md:flex-row-reverse' : ''} bg-white p-8 rounded-2xl shadow-sm border border-slate-100`}>
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-4">
                <span class="p-3 bg-teal-100 text-teal-700 rounded-lg">
                  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </span>
                <h2 class="text-2xl font-bold text-slate-900">{service.data.title}</h2>
              </div>
              <p class="text-lg text-slate-600 mb-6">{service.data.description}</p>
              
              {service.data.features && (
                <ul class="space-y-3 mb-8">
                  {service.data.features.map((feature) => (
                    <li class="flex items-start">
                      <svg class="h-6 w-6 text-teal-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-slate-600">{feature}</span>
                    </li>
                  ))}
                </ul>
              )}

              <div class="flex items-center justify-between mt-8 pt-8 border-t border-slate-100">
                <span class="text-slate-500 font-medium">Inversión: <span class="text-slate-900">{service.data.price}</span></span>
                <a href="/agenda" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-teal-700 hover:bg-teal-800 transition-colors">
                  Consultar
                </a>
              </div>
            </div>
            <div class="w-full md:w-1/3 flex justify-center">
               <div class="w-full aspect-square bg-teal-50 rounded-2xl flex items-center justify-center text-teal-200">
                 <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
               </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
