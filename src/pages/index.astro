---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const recentPosts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 3);

const testimonials = [
  {
    name: "Ana García",
    role: "Estudiante de Psicología",
    text: "Gracias al acompañamiento logré organizar mis tiempos y aprobar los finales que tenía pendientes. La calidez humana es impagable."
  },
  {
    name: "Lucas Méndez",
    role: "Docente Universitario",
    text: "La orientación en gestión social me permitió acceder a recursos que desconocía. Muy profesional y clara en todo el proceso."
  },
  {
    name: "Sofía Torres",
    role: "Ingresante",
    text: "Estaba muy perdida con la elección de mi carrera. Las sesiones de orientación vocacional me dieron la claridad que necesitaba."
  }
];
---

<Layout title="Consultoría Académica | Inicio">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-slate-50 overflow-hidden">
      <div class="max-w-7xl mx-auto">
        <div class="relative z-10 pb-8 bg-slate-50 sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
          <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
            <div class="sm:text-center lg:text-left">
              <h1 class="text-4xl tracking-tight font-extrabold text-slate-900 sm:text-5xl md:text-6xl">
                <span class="block xl:inline">Acompañamiento integral para</span>
                <span class="block text-teal-700 xl:inline">tu trayectoria académica</span>
              </h1>
              <p class="mt-3 text-base text-slate-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                Servicios de consultoría, orientación y gestión social diseñados para potenciar tu desarrollo profesional y personal. Un espacio de escucha y estrategia.
              </p>
              <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                <div class="rounded-md shadow">
                  <a href="/agenda" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-teal-700 hover:bg-teal-800 md:py-4 md:text-lg md:px-10 transition-all">
                    Agendar Cita
                  </a>
                </div>
                <div class="mt-3 sm:mt-0 sm:ml-3">
                  <a href="/servicios" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-teal-700 bg-teal-100 hover:bg-teal-200 md:py-4 md:text-lg md:px-10 transition-all">
                    Ver Servicios
                  </a>
                </div>
              </div>
            </div>
          </main>
        </div>
      </div>
      <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 bg-slate-200 flex items-center justify-center">
        <!-- Placeholder for Hero Image -->
        <div class="w-full h-56 sm:h-72 md:h-96 lg:w-full lg:h-full bg-slate-300 flex items-center justify-center text-slate-500">
           <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=1471&q=80" alt="Estudiantes trabajando" class="w-full h-full object-cover" />
        </div>
      </div>
    </section>

    <!-- Services Preview -->
    <section class="py-12 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:text-center">
          <h2 class="text-base text-teal-600 font-semibold tracking-wide uppercase">Mis Servicios</h2>
          <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-slate-900 sm:text-4xl">
            Soluciones a tu medida
          </p>
          <p class="mt-4 max-w-2xl text-xl text-slate-500 lg:mx-auto">
            Abordaje integral desde la gestión social y el acompañamiento pedagógico.
          </p>
        </div>

        <div class="mt-10">
          <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-4">
            {services.map((service) => (
              <div class="relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-teal-500 rounded-lg shadow-sm hover:shadow-md transition-shadow border border-slate-100">
                <div>
                  <span class="rounded-lg inline-flex p-3 bg-teal-50 text-teal-700 ring-4 ring-white">
                    <!-- Icon placeholder logic could go here based on service.data.icon -->
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                  </span>
                </div>
                <div class="mt-8">
                  <h3 class="text-lg font-medium">
                    <a href={`/servicios`} class="focus:outline-none">
                      <span class="absolute inset-0" aria-hidden="true"></span>
                      {service.data.title}
                    </a>
                  </h3>
                  <p class="mt-2 text-sm text-slate-500">
                    {service.data.description}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-12 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-extrabold text-slate-900 text-center mb-12">Lo que dicen mis alumnos</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {testimonials.map((t) => (
            <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-100">
              <p class="text-slate-600 italic mb-4">"{t.text}"</p>
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10 rounded-full bg-teal-200 flex items-center justify-center text-teal-800 font-bold">
                  {t.name[0]}
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-slate-900">{t.name}</p>
                  <p class="text-sm text-slate-500">{t.role}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Blog Preview -->
    <section class="py-12 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-end mb-8">
          <h2 class="text-3xl font-extrabold text-slate-900">Últimas novedades</h2>
          <a href="/blog" class="text-teal-700 hover:text-teal-900 font-medium">Ver todo el blog &rarr;</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {recentPosts.map((post) => (
            <article class="flex flex-col rounded-lg shadow-lg overflow-hidden border border-slate-100">
              <div class="flex-shrink-0">
                <div class="h-48 w-full bg-slate-200 flex items-center justify-center text-slate-400">
                   <!-- Placeholder for blog image -->
                   <svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                </div>
              </div>
              <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                <div class="flex-1">
                  <p class="text-sm font-medium text-teal-600">
                    {post.data.category}
                  </p>
                  <a href={`/blog/${post.slug}`} class="block mt-2">
                    <p class="text-xl font-semibold text-slate-900">{post.data.title}</p>
                    <p class="mt-3 text-base text-slate-500 line-clamp-3">{post.data.description}</p>
                  </a>
                </div>
                <div class="mt-6 flex items-center">
                  <div class="text-sm text-slate-500">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString('es-AR', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </time>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="bg-teal-700">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
        <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
          <span class="block">¿Listo para empezar?</span>
          <span class="block text-teal-200">Agendá tu primera consulta hoy.</span>
        </h2>
        <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
          <div class="inline-flex rounded-md shadow">
            <a href="/agenda" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-teal-600 bg-white hover:bg-teal-50">
              Reservar turno
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
