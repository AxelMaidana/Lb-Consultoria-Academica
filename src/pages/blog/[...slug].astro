---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} | Consultoría Académica`}>
  <Header />
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <article class="prose prose-lg prose-slate mx-auto">
      <header class="mb-8 not-prose text-center">
        <p class="text-teal-600 font-semibold tracking-wide uppercase text-sm mb-2">{post.data.category}</p>
        <h1 class="text-3xl sm:text-4xl font-extrabold text-slate-900 mb-4">{post.data.title}</h1>
        <div class="text-slate-500 text-sm">
          Por <span class="font-medium text-slate-900">{post.data.author}</span> &bull; 
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('es-AR', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
        </div>
      </header>
      
      <div class="bg-slate-100 rounded-xl overflow-hidden mb-8 h-64 sm:h-80 flex items-center justify-center text-slate-400">
         <!-- Placeholder image logic -->
         <svg class="h-20 w-20" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
      </div>

      <Content />
    </article>
  </main>
  <Footer />
</Layout>
